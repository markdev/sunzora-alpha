table#topButtons(ng-controller="ContestNavCtrl") 
	tr
		td
			button(ui-sref="contests.list") Back to contests
		td
			button(ng-click="goToDetails()") Details
		td
			button(ng-click="goToAddEntry()") Add New Entry
hr

h1.title Judging: {{ contest.title }}

table#judgeContent
	tr
		td(class="slider")
			button(ng-if="!first" ng-click="slideLeft()") Left
		td
			div {{ entries[current].title }}
		td(class="slider")
			button(ng-if="!last" ng-click="slideRight()") Right
br

table#judgeRating
	tr
		td
			button(class="rateButton" id="1" ng-class="{'red' : entries[current].rating == 1}" ng-click="rateThis(1)") 1
