doctype
html(lang="en", ng-app="sun")
	head
		title Sunzora
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(charset="utf-8")

		//- styles
		link(rel="stylesheet", href="/css/main.css")

		//- javascripts
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
		script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.23/angular.js")
		script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.23/angular-route.js")
		script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.23/angular-touch.js")
		script(src="/lib/angular-ui-router.min.js")
		script(src="/lib/moment.js")

		//- root angular dependencies
		script(src="/app/app.js")

	body
		ui-view

		//- set current user if it exists. else set to null.
		if !!currentUser
			script.
				window.currentUser = !{JSON.stringify(currentUser)}
				console.log("CURRENT USER");
				console.log(currentUser);
		else
			script.
				window.currentUser = {}

		//- reference the custom angular dependencies
		include ng-modules
		include ng-services
		include ng-controllers
		include ng-directives
		include ng-routes
